<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Points">

    <TextView
        android:id="@+id/text_user_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:text="Your Points: 200" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendpoints"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_user_prompt"
        android:entries="@array/user_names" />

    <EditText
        android:id="@+id/edit_points_to_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pointstosend"
        android:inputType="number" />

    <Button
        android:id="@+id/button_send_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Send Points" />

</LinearLayout>

